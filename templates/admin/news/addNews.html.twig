{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle actualitée{% endblock %}


{% block body %}
    <main>
        <section>
            <h2 class="text-4xl text-center m-4">Ajouter une actualité</h2>
            <div class="mt-10 max-w-2xl mx-auto">
                {{ form_start(formNews) }}
                {{ form_widget(formNews) }}

                <input type="submit" class="inline-block w-full bg-indigo-500 hover:bg-indigo-600 p-4" value="Ajouter l'actualité">
                {{ form_end(formNews) }}
            </div>
        </section>
    </main>
{% endblock %}
