{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <main class="min-h-screen flex flex-col items-center justify-center bg-gray-100 dark:bg-gray-800">
        <section class="w-full max-w-4xl p-6 bg-white rounded-lg shadow-md dark:bg-gray-700">
            <h1 class="text-4xl font-bold text-center text-gray-800 dark:text-white mb-6">Profil</h1>
            <div class="flex flex-col md:flex-row items-center md:items-start">
                <img class="w-32 h-32 rounded-full mb-6 md:mb-0 md:mr-6" src="{{ asset('images/avatar/' ~ user.image) }}" alt="Avatar"> <div class="flex flex-col items-center md:items-start">
                    <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-2">{{ user.firstName }} {{ user.lastName }}</h2>
                    <p class="text-gray-600 dark:text-gray-300 mb-2"><strong>Email:</strong> {{ user.email }}</p>
                    <p class="text-gray-600 dark:text-gray-300 mb-2"><strong>Rôles:</strong> {{ user.roles | join(', ') }}</p> <p class="text-gray-600 dark:text-gray-300 mb-2"><strong>Date de création : </strong> {{ user.createdAt | date('d/m/Y') }}</p>
                </div>
            </div>
        </section>
    </main>
{% endblock %}
